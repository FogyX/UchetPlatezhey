<Window x:Class="УчётПлатежей.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:УчётПлатежей"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900">
    <DockPanel LastChildFill="True">
        <StackPanel MinHeight="50" Orientation="Horizontal" DockPanel.Dock="Bottom">
            <Button x:Name="btnLogin"  MinWidth="120" Content="Вход" Margin="10" Click="btnLogin_Click"></Button>
        </StackPanel>
        <Frame x:Name="MainFrame" Background="LightGray" Margin="10" MinHeight="400" MinWidth="850" NavigationUIVisibility="Hidden"></Frame>
    </DockPanel>
</Window>
